.top{
	width: 100%;
	height: 280rpx;
}
.top image{
	width: 100%;
	height: 280rpx;
}
.content{
	width: 100%;
	margin: 30rpx auto;
}
.content .con_top{
	/* display: flex; */
	width: 90%;
	margin: 0 auto;
	/* justify-content: space-between; */
}
.content .con_top view{
	display: inline-block;
}
.content .con_top view text{
	font-size: 30rpx;
}
.content .con_top view text:nth-child(2){
	color: #c5c5c5;
}
.content .con_top button{
	height: 50rpx;
	padding: 6rpx;
	border-radius: 20rpx;
	font-size: 28rpx;
	float: right;
	width: 200rpx;
	background-color: #f7b859;
	line-height: 40rpx;
	box-shadow: 2 2 5 #999999;
}
.con_con{
	width: 90%;
	margin: 20rpx auto;
}
.con_con navigator{
	display: block;
	width: 100%;
}
.con_con .con_con_top{
	font-size: 30rpx;
	width: 90rpx;
	height: 45rpx;
	line-height: 45rpx;
	border-radius: 5rpx;
	text-align: center;
	color: #9e5f00;
	background: #f7b859;
}
.con_con .con_con_b{
	width: 100%;
	display: flex;
	margin-top: 20rpx;
}
.con_con .con_con_b .b_l{
	width: 170rpx;
	height: 250rpx;
}
.con_con .con_con_b .b_l image{
	width: 170rpx;
	height: 250rpx;
	border-radius: 10rpx;
}
.con_con .con_con_b .b_r{
	flex-grow: 1;
	height: 250rpx;
	display: flex;
}
.con_con .con_con_b .b_r .r_l{
	width: 60%;
	padding-right: 30rpx;
	padding-left: 20rpx;
	height: 250rpx;
	border-right: 1px dashed  #999999;
}
.con_con .con_con_b .b_r .r_r #rr{
	margin-top: 80rpx;
	margin-left: 40rpx;
}
.con_con .con_con_b .b_r .r_r #rr view{
	font-size: 30rpx;
	color:#ffd18b;
}
.con_con .con_con_b .b_r .r_r van-rate{
	text-align: center;
}
.con_con .con_con_b .b_r .r_l van-rate{
	display: inline-block;
}
.con_con .con_con_b .b_r .r_l #title{
	font-weight: 700;
	color: rgb(41, 41, 41);
	font-size: 40rpx;
}
.con_con .con_con_b .b_r .r_l text,.con_con .con_con_b .b_r .r_l view{
	font-size: 28rpx;
	color: #999999;
}
.con_b{
	width: 100%;
	margin-top: 20rpx;
	height: 40rpx;
	border-radius: 6rpx;
	background-color: #f7f7f7;
}

